doctype html

head

  meta(charset="utf-8")
  meta(
    name="viewport"
    content="width=device-width, initial-scale=1"
  )

  title Products list page

  link(
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
    crossorigin="anonymous"
  )

body

  .container

    if !hasUserBeenAuthenticated

      .alert.alert-info(role="alert") Authenticate to receive the personal recommendations and leave comments


    .card-group
      for product in products
        .card
          img.card-img-top(
            src= product.thumbnailURI
            alt= `The thumbnail of product '${product.title}'`
          )
          .card-body
            h5.card-title= product.title
            p.card-text= product.description
            p.card-muted Price $
