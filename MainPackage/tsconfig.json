{
  "compilerOptions": {

    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,

    "outDir": "Distributable/",
    "declaration": true,
    "removeComments": true
  },

  "include": [ "Source/**/*" ]
}
